---
let allPosts = await Astro.glob('./posts/*.md');
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<style>
			html,
			body {
				font-family: system-ui;
				margin: 0;
			}
			body {
				padding: 2rem;
			}
		</style>
	</head>
	<body>
		<main>
			<p>Posts</p>
			{allPosts.map((p) => <a href={p.url}>{p.frontmatter.title}</a>)}
		</main>
	</body>
</html>
