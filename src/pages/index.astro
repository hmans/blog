---
import PostLink from "../components/PostLink.astro";
import Layout from "../layouts/Layout.astro";
const allPosts = (await Astro.glob('./posts/*.md')).sort((a, b) => Date.parse(b.frontmatter.date) - Date.parse(a.frontmatter.date));
---
<Layout>
	{allPosts.map((post) =>
	<PostLink post={post} />
	)}
</Layout>
