---
import MainFooter from "../components/MainFooter.astro";
import MainHeader from "../components/MainHeader.astro"

---
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width" />
  <link rel="icon" type="image/x-icon" href="/favicon.ico" />
</head>

<body>
  <div class="container">
    <MainHeader />

    <main>
      <slot />
    </main>

    <MainFooter />
  </div>
</body>

</html>

<style is:global>
  @import url('https://fonts.googleapis.com/css2?family=Bitter:wght@400;800&family=Overpass:wght@400;800&display=swap');

  html,
  body {
    margin: 0;
  }

  body {
    font: 18px/1.4 Overpass, system-ui, sans-serif;
    padding: 2rem;
    background-color: #fff;
    color: #555;
  }

  .container {
    max-width: 800px;
    margin: 0 auto;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-family: Bitter, serif;
  }

  a {
    color: deeppink;
  }
</style>
