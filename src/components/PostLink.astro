---
export interface Props {
  post: any;
}

const { post } = Astro.props;
---
<p>
  <a href={post.url} class={post.frontmatter.draft ? "draft" : ""
    }>{post.frontmatter.title}</a>
  {post.frontmatter.date}
</p>

<style>
  a {
    font-weight: bold;
    margin-right: 1rem;
  }

  a.draft {
    color: #aaa;
  }

  p {
    color: #ccc;
  }
</style>
